<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="50dp"
    android:background="@android:color/white">
    <ImageView
        android:id="@+id/contact_circle"
        android:layout_width="@dimen/contact_size_profile_image"
        android:layout_height="@dimen/contact_size_profile_image"
        android:background="@drawable/circle_icon"
        android:layout_marginLeft="@dimen/contact_margin_left"
        app:layout_constraintBottom_toTopOf="@+id/guideline4"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="@+id/guideline4" />

    <TextView
        android:id="@+id/contact_letter"
        android:layout_width="@dimen/contact_size_profile_image"
        android:layout_height="@dimen/contact_size_profile_image"
        android:gravity="center"
        android:textSize="@dimen/contact_size_text"
        android:textColor="@android:color/white"
        android:layout_marginBottom="3dp"
        app:layout_constraintBottom_toBottomOf="@+id/contact_circle"
        app:layout_constraintLeft_toLeftOf="@+id/contact_circle"
        app:layout_constraintRight_toRightOf="@+id/contact_circle"
        app:layout_constraintTop_toTopOf="@+id/contact_circle" />

    <TextView
        android:id="@+id/contact_name_textView"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="8dp"
        android:textSize="20sp"
        app:layout_constraintBottom_toTopOf="@+id/guideline4"
        app:layout_constraintLeft_toRightOf="@+id/contact_letter"
        app:layout_constraintTop_toTopOf="@+id/guideline4"
        app:layout_constraintRight_toRightOf="parent" />

    <android.support.constraint.Guideline
        android:id="@+id/guideline4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.5" />

</android.support.constraint.ConstraintLayout>